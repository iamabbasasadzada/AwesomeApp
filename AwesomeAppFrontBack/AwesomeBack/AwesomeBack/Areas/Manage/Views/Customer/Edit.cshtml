@model Customer

<form
  method="post"
  enctype="multipart/form-data"
  asp-controller="Customer"
  asp-action="Edit"
>
  <div class="mb-3">
    <label class="form-label">Model</label>
    <input asp-for="FullName" class="form-control" placeholder="FullName" />
    <span asp-validation-for="FullName" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label class="form-label">Position</label>
    <input asp-for="Position" class="form-control" placeholder="Position" />
    <span asp-validation-for="Position" class="text-danger"></span>
  </div>

  <div class="mb-3">
    <label class="form-lable">Desc</label>
    <textarea asp-for="Desc" class="form-input"> </textarea>
    <span asp-validation-for="Desc" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <input asp-for="Photo" class="form-control" />
    <span asp-validation-for="Photo" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <button type="submit" class="btn btn-primary">Update</button>
  </div>
</form>
